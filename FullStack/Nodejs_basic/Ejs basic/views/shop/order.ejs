<%- include('../partial/header'); %>
    <section class="header">
        <% if (products.length> 0) { %>
            <h1>Total Price : $ <%= totalPrice %> </h1>
            <hr>
            <div class="products">
                <% products.map(product=> { %>

                    <div class="product-container">
                        <h2>
                            <%= product.title %>
                        </h2>
                        <img src="<%= product.img_url %> " alt="krishna balram painting">
                        <h1>price : $<%= product.orderItem.price %>
                        </h1>
                        <p>
                            <%= product.description %>
                        </p>
                        <p>
                            <%= product.orderItem.quantity %>
                        </p>
                        <form action="/delete-order-product" method="post">
                            <button class='button del-button' type="submit">Remove from order</button>
                            <input type="hidden" name="prodId" id="" value="<%= product.id %>">
                        </form>

                    </div>
                    <% }) %>
            </div>

            <% } else { %>
                <h1>Nothing to display</h1>
                <%}%>
    </section>
    <%- include('../partial/footer'); %>